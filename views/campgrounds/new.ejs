<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label" name="campground[price]">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="price" aria-label="price" name="campground[price]"
                        placeholder="0" required>
                    <div class="valid-feedback">Looks good!</div>
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Choose image(s)</label>
                <div class="input-group">
                    <input type="file" class="form-control" id="image" aria-describedby="" aria-label="Upload" multiple>
                </div>
            </div>
            <div class="valid-feedback">Looks good!</div>
            <!-- <div class="invalid-feedback">Required</div> -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="campground[description]" id="" cols="30" rows="10" class="form-control"
                    required></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
        </form>
        <a href="/campgrounds">Back to Campground</a>
    </div>
</div>